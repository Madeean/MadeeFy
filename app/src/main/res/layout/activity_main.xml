<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradasi_login"
    android:layout_height="match_parent"
    tools:context=".auth.MainActivity">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/radius_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginVertical="10dp"
                app:endIconMode="clear_text"
                android:background="@color/pink"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email">

                <com.google.android.material.textfield.TextInputEditText
                    android:background="@color/pink"
                    android:layout_marginHorizontal="40dp"
                    android:id="@+id/email_input_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginVertical="10dp"
                android:layout_below="@id/email_login"
                app:endIconMode="clear_text"
                android:background="@color/pink"
                android:layout_marginHorizontal="40dp"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password">

                <com.google.android.material.textfield.TextInputEditText
                    android:background="@color/pink"
                    android:layout_marginHorizontal="40dp"
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:backgroundTint="@color/ungu"

                android:background="@drawable/radius_18"
                android:id="@+id/btn_login"
                android:textAllCaps="false"
                android:text="Login"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/password"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:textColor="@color/black"
                android:id="@+id/btn_register"
                android:textAllCaps="false"
                android:backgroundTint="@color/biru"
                android:background="@drawable/radius_18"
                android:text="Register"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>